.markgo {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 999;
    background: rgba(0,0,0,0.5);
}

.markgo-wrap {
    position: absolute;
    top: -10%;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    background: #fff;
    width: 80%;
    height: 170px;
    border: 1px solid #f5f6f7;
    border-radius: 8px;
}

.markgo-wrap-title {
    height: 30px;
    text-align: center;
    margin-top: 15px;
    font-size: 18px;
    color: #000;
}

.markgo-wrap-content {
    color: #666;
    height: 55px;
    font-size: 15px;
    margin-top: 15px;
    width: 80%;
    margin-left: 10%;
    line-height: 55rpx;
}

.marktrue {
    width: 100%;
    color: #33c500;
    height: 45px;
    text-align: center;
    border-top: 1px solid #ccc;
    line-height: 40px;
    margin-top: 15px;
    font-size: 30rpx;
}