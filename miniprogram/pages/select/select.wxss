.page-select{
    width: 98%;
    height: 100%;
    margin:0 auto;
    background-color: #f0f0f0;
    text-align: center;
    padding-top: 2px;
}
.page-select .title{
    width: 100%;
    text-align: left;
    background: #fff;
    color:#000;
    height: 50px;
    display: flex;
    flex-direction: box;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.page-select .selects{
    padding-top: 5px;
}
.page-select .addition{
    margin-top: 10px;
}
.page-select .selects .select{
    background-color: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #ebebeb;
    height: 45px;
    text-align: left;
}
.page-select .selects .select .sortnum{
    background-color: #1bcfad;
    color: #fff;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    text-align: center;

}
.page-select .selects .select .name{
    padding-left: 5px;
    flex-grow: 8;
}
.page-select .selects .select .arraw{
    flex-grow: 1;
    padding-right: 5px;
    color: #B2B2B2;
    text-align: right;
}
/* 外层组件的宽度可设置成100%或具体数值 */
.page-select .adContainer {
    margin-top: 10px;
    padding-bottom: 10px;
    width: 100%;
}