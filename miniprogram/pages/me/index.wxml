<view class="page-info">
    <view class="header" bindtap="tapWechat">
        <view class="avatar">
            <image class="avatarimage" src="{{userInfo.avatarUrl}}"/>
        </view>
        <view class="nickname">{{userInfo.nickName+" "}}{{grade+" "}}{{name}}</view>
    </view>
    <view class="menus">
        <view class="menu" bindtap="bindMyHistory" >
            <view class="left">
            <image class="icon" style="background-color: #fff;" mode="aspectFill" src="http://file.xiaomutong.com.cn/20200206/recordicon.png"></image>
            <text class="title">答题记录</text>
            </view>
            <view class="arraw">></view>
        </view>  
        <view class="menu" bindtap="bindMyStudy" >
            <view class="left">
            <image class="icon" style="background-color: #fff;" mode="aspectFill" src="http://file.xiaomutong.com.cn/20200206/listicon.png"></image>
            <text class="title">错题记录</text>
            </view>
            <view class="arraw">></view>
        </view>   
        <view class="menu" bindtap="bindgorule" >
            <view class="left">
            <image class="icon" style="background-color: #fff;" mode="aspectFill" src="http://file.xiaomutong.com.cn/20200206/lookicon.png"></image>
            <text class="title">使用说明</text>
            </view>
            <view class="arraw">></view>
        </view>  
        <view class="menu" bindtap="bindgopay" >
            <view class="left">
            <image class="icon" style="background-color: #fff;" mode="aspectFill" src="http://file.xiaomutong.com.cn/20200206/moneyicon.png"></image>
            <text class="title">赞助打赏</text>
            </view>
            <view class="arraw">></view>
        </view>  
                  
        <view class="menu" bindtap="bindgoabout" >
            <view class="left">
            <image class="icon" style="background-color: #fff;" mode="aspectFill" src="http://file.xiaomutong.com.cn/20200206/loveicon.png"></image>
            <text class="title">关于我们</text>
            </view>
            <view class="arraw">></view>
        </view>  
    </view>

</view>